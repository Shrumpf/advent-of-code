{
  "version": "0.2.0",
  "configurations": [
    // ═══════════════════════════════════════════════════════════════
    // JAVASCRIPT (via main.js runner)
    // ═══════════════════════════════════════════════════════════════
    {
      "name": "JS: Debug Day",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/solutions/js/main.js",
      "args": [
        "--day=${input:day}",
        "--year=${input:year}"
      ],
      "cwd": "${workspaceFolder}/solutions/js",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "JS: Debug Today",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/solutions/js/main.js",
      "cwd": "${workspaceFolder}/solutions/js",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "JS: Debug Day (Bun)",
      "type": "bun",
      "request": "launch",
      "program": "${workspaceFolder}/solutions/js/main.js",
      "args": [
        "--day=${input:day}",
        "--year=${input:year}"
      ],
      "cwd": "${workspaceFolder}/solutions/js"
    },
    // ═══════════════════════════════════════════════════════════════
    // RUST (via cargo runner)
    // ═══════════════════════════════════════════════════════════════
    {
      "name": "Rust: Debug Day",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": [
          "build",
          "--package=shrumpf-aoc",
          "--manifest-path=${workspaceFolder}/solutions/rust/Cargo.toml"
        ],
        "filter": {
          "name": "shrumpf-aoc",
          "kind": "bin"
        }
      },
      "args": [
        "run",
        "${input:day}",
        "${input:year}"
      ],
      "cwd": "${workspaceFolder}/solutions/rust",
      "env": {
        "RUST_BACKTRACE": "1"
      }
    },
    {
      "name": "Rust: Debug Today",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": [
          "build",
          "--package=shrumpf-aoc"
        ],
        "filter": {
          "name": "shrumpf-aoc",
          "kind": "bin"
        }
      },
      "args": [
        "run"
      ],
      "cwd": "${workspaceFolder}/solutions/rust"
    },
    // ═══════════════════════════════════════════════════════════════
    // GO CLI (for debugging the tooling itself)
    // ═══════════════════════════════════════════════════════════════
    {
      "name": "Go CLI: Download",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cli",
      "args": [
        "download",
        "${input:year}",
        "${input:day}"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Go CLI: Generate",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/cli",
      "args": [
        "generate",
        "${input:lang}",
        "${input:year}",
        "${input:day}"
      ],
      "cwd": "${workspaceFolder}"
    }
  ],
  "inputs": [
    {
      "id": "year",
      "type": "promptString",
      "description": "Year (e.g., 2025)",
      "default": "2025"
    },
    {
      "id": "day",
      "type": "promptString",
      "description": "Day (1-25)",
      "default": "1"
    },
    {
      "id": "lang",
      "type": "pickString",
      "description": "Language",
      "options": [
        "js",
        "rust",
        "go",
        "python",
        "csharp"
      ]
    }
  ]
}